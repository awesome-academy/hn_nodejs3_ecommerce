extends ../layoutAdmin

block admin_content
  .row.mt-5
    .col-md-6.offset-md-3
      h1 {{Action}} #{t('admin.category.category')}
      form
        .mb-3
          label.form-label(for='name')
            | #{t('admin.category.name')}
            sup.text-danger *
          input#name.form-control(type='text' required='')
        button.btn.btn-primary.border-0.border-secondary.py-3.px-4.rounded-pill.text-white.w-100(type='submit') {{Action}}
