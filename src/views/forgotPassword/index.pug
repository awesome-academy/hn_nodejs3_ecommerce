extends ../layout

block content 
  include ../mixins/_breadcrumb
  +breadcurmb(#{t('forgotPassword.forgotPassword')}, [])

  .container-fluid.py-5
    .container.py-5
      .row
        .col-md-6.offset-md-3
          form
            .mb-3
              label.form-label(for='email') 
                | #{t('forgotPassword.email')}
                sup.text-danger *
              input#email.form-control(type='email' required='')
            button.btn.btn-primary.border-0.border-secondary.py-3.px-4.rounded-pill.text-white.w-100(type='submit') #{t('forgotPassword.submit')}
