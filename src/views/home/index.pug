extends ../layout

block content 
  include ../_slider

  .container-fluid.fruite.py-5
    .container.py-5
      h1.mb-4 #{t('home.title')}
      .row.g-4
        .col-lg-12
          .row.g-4
            .col-xl-3
              .input-group.w-100.mx-auto.d-flex
                input.form-control.p-3(type='search' placeholder='keywords' aria-describedby='search-icon-1')
                span#search-icon-1.input-group-text.p-3
                  i.fa.fa-search
            .col-6
            .col-xl-3
          .row.g-4
            .col-lg-3
              .row.g-4
                .col-lg-12
                  .mb-3
                    h4 #{t('home.categories')}
                    ul.list-unstyled.fruite-categorie
                      each category in categories
                        li
                          .d-flex.justify-content-between.fruite-name
                            a(href='#')
                              i.fas.fa-apple-alt.me-2
                              | #{categorie.name}
                            - let num = category.products.length
                            span (#{num})
                .col-lg-12
                  .mb-3
                    h4.mb-2 #{t('home.price')}
                    input#rangeInput.form-range.w-100(type='range' name='rangeInput' min='0' max='500' value='0' oninput='amount.value=rangeInput.value')
                    output#amount(name='amount' min-velue='0' max-value='500' for='rangeInput') 0
            .col-lg-9
              .row.g-4.justify-content-center
                each product in products
                  .col-md-6.col-lg-6.col-xl-4
                    .rounded.position-relative.fruite-item
                      .fruite-img
                        img.img-fluid.w-100.rounded-top(src='img/fruite-item-5.jpg' alt='')
                      .text-white.bg-secondary.px-3.py-1.rounded.position-absolute.t-10px.l-10px #{product.category.name}
                      .p-4.border.border-secondary.border-top-0.rounded-bottom
                        h4 #{product.name}
                        p
                          | #{product.description}
                        .d-flex.justify-content-between.flex-lg-wrap
                          p.text-dark.fs-5.fw-bold.mb-0 $#{product.price} / kg
                          a.btn.border.border-secondary.rounded-pill.px-3.text-primary(href='#')
                            i.fa.fa-shopping-bag.me-2.text-primary
                            |  #{t('home.addToCart')}
                .col-12
                  .pagination.d-flex.justify-content-center.mt-5
                    each val in Array.from({length: pageLength}, (_, i) => i + 1)
                      if val === page
                        a.active.rounded(href='#') #{val}
                      else
                        a.rounded(href='#') #{val}
