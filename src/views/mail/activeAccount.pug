doctype html
head
  title
  meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  link(rel='stylesheet' , href='/public/css/active.mail.css' )
  table(border='0' cellpadding='0' cellspacing='0' width='100%')
    tr
      td(bgcolor='#FF04AF' align='center')
        table(border='0' cellpadding='0' cellspacing='0' width='100%').mw-600px
          tr
            td(align='center' valign='top').p1-email  
    tr
      td(bgcolor='#FF04AF' align='center').p2-email
        table(border='0' cellpadding='0' cellspacing='0' width='100%').mw-600px
          tr
            td(bgcolor='#ffffff' align='center' valign='top').td-title
              h1.title #{emailData.content.welcome}
    tr
      td(bgcolor='#f4f4f4' align='center').p2-email
        table(border='0' cellpadding='0' cellspacing='0' width='100%').mw-600px
          tr
            td(bgcolor='#ffffff' align='left').text1
              p.m-0
                |  #{emailData.content.text}
          tr
            td(bgcolor='#ffffff' align='left')
              table(width='100%' border='0' cellspacing='0' cellpadding='0')
                tr
                  td(bgcolor='#ffffff' align='center').p3-email
                    table(border='0' cellspacing='0' cellpadding='0')
                      tr
                        td(align='center' bgcolor='#FF04AF').td-button
                          a(href=emailData.content.activeURL target='_blank').button  #{emailData.content.confirmAccount}
          tr
            td(bgcolor='#ffffff' align='left').text1 
              p.m-0 
                | #{emailData.content.autoGenerate}
          tr
            td(bgcolor='#ffffff' align='left').text2 
              p.m-0
                | #{emailData.content.cheers},
                br
                | #{emailData.content.fruitablesTeam}
