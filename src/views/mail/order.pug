doctype html
head
  title
  meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  link(rel='stylesheet' , href='/public/css/order.css' )
body 
  h1 #{emailData.content.title}
  p #{emailData.content.message}
  p #{emailData.content.orderId}: #{emailData.order.id}
  p #{emailData.content.name}: #{emailData.order.name}
  p #{emailData.content.email}: #{emailData.order.email}
  p #{emailData.content.phone}: #{emailData.order.phone}
  p #{emailData.content.address}: #{emailData.order.address}

  .table-wrapper
    table.fl-table
      thead 
        tr 
          th #{emailData.content.name}
          th #{emailData.content.price}
          th #{emailData.content.quantity}
          th #{emailData.content.total}
      tbody 
        each item in emailData.orderItems 
          tr 
            td #{item.product.name}
            td #{item.price}
            td #{item.quantity}
            -let t = item.quantity * item.price
            td #{t}

  p #{emailData.content.subtotal}: $#{emailData.subtotal}
  p #{emailData.content.coupon}: (- #{emailData.coupon.percentage}%)
  p #{emailData.content.total}: $#{emailData.total}
