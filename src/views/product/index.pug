extends ../layout

block content 
  include ../mixins/_breadcrumb
  +breadcurmb('Product Details', [
    {
      href: '/',
      text: t('header.home')
    },
    {
      href: '/',
      text: t('product.product')
    },
    {
      href: `/product/${product.id}`,
      text: #{product.name}
    },
  ])

  .container-fluid.py-5.mt-5
    .container.py-5
      .row.g-4.mb-5
        .col-lg-8.col-xl-9
          .row.g-4
            .col-lg-6
              .border.rounded
                a(href='#')
                  img.img-fluid.rounded(src='img/single-item.jpg' alt='Image')
            .col-lg-6
              h4.fw-bold.mb-3 #{product.name}
              p.mb-3 #{t('product.category')}: #{product.category.name}
              h5.fw-bold.mb-3 #{product.price} $
              .d-flex.mb-4
                each val in [1...product.ratingAvg]
                  i.fa.fa-star.text-secondary
                each val in [1...(5-product.ratingAvg)]
                  i.fa.fa-star
              p.mb-4
                | #{product.description}
              .input-group.quantity.mb-5.w-100px
                .input-group-btn
                  button.btn.btn-sm.btn-minus.rounded-circle.bg-light.border
                    i.fa.fa-minus
                input.form-control.form-control-sm.text-center.border-0(type='text' value='1')
                .input-group-btn
                  button.btn.btn-sm.btn-plus.rounded-circle.bg-light.border
                    i.fa.fa-plus
              a.btn.border.border-secondary.rounded-pill.px-4.py-2.mb-4.text-primary(href='#')
                i.fa.fa-shopping-bag.me-2.text-primary
                |  #{t('home.addToCart')}
            .col-lg-12
              nav
                .nav.nav-tabs.mb-3
                  button#nav-mission-tab.nav-link.border-white.border-bottom-0(type='button' role='tab' data-bs-toggle='tab' data-bs-target='#nav-mission' aria-controls='nav-mission' aria-selected='true') Reviews
              .tab-content.mb-5
                #nav-mission.tab-pane(role='tabpanel' aria-labelledby='nav-mission-tab')
                  each rating in product.ratings
                    .d-flex
                      img.img-fluid.rounded-circle.p-3.w-100px.h-100px(src='img/avatar.jpg' alt='')
                      div
                        p.mb-2.fs-14px #(rating.createdAt)
                        .d-flex.justify-content-between
                          h5 #{rating.user.name}
                          .d-flex.mb-3
                            each _ in [1...rating.ratingPoint]
                              i.fa.fa-star.text-secondary
                            each _ in [1...(5 - rating.ratingPoint)]
                              i.fa.fa-star
                        p #{rating.comment}
        .col-lg-4.col-xl-3
          .row.g-4.fruite
            .col-lg-12
              h4.mb-4 #{t('product.featuredProducts'}
              each product in featuredProducts
                .d-flex.align-items-center.justify-content-start
                  .rounded.w-100px.h-100px
                    img.img-fluid.rounded(src='img/featur-1.jpg' alt='Image')
                  div
                    h6.mb-2 Big Banana
                    .d-flex.mb-2
                      each _ in [1...product.ratingAvg]
                        i.fa.fa-star.text-secondary
                      each _ in [1...(5 - product.ratingAvg)]
                        i.fa.fa-star
                    .d-flex.mb-2
                      h5.fw-bold.me-2 #{product.price} $
              .d-flex.justify-content-center.my-4
                a.btn.border.border-secondary.px-4.py-3.rounded-pill.text-primary.w-100(href='#') #{t('product.viewMore')}
